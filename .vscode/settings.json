{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/CVS": true,
        "**/*.crswap": true,
        "**/node_modules": true,
        "**/__pycache__": true,
        ".venv": true,
        ".idea": true
    },
    "hide-files.files": [
        ".idea"
    ],
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lock, bun.lockb, bunfig.toml, .npmrc",
        "*.ts": "${capture}.t.ts, ${capture}.spec.ts",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.html",
        "typedoc.json": "markdown.typedoc.json "
    },
    "cSpell.words": [
        "иммутабельности",
        "иммутабельных",
        "коммита",
        "коммитом",
        "матчеры",
        "рефакторингом",
        "сериализованная",
        "сериализованной",
        "Сериализованный",
        "сериализовано",
        "Сериализуем",
        "Сериализуемая",
        "снапшотов",
        "фича",
        "Форкните",
        "bunfig",
        "esac",
        "npmjs",
        "softprops",
        "typedoc"
    ],
    "cSpell.ignorePaths": [
        "docs/**",
        ".gitignore"
    ],
    "markdownlint.ignore": [
        "docs/**"
    ]
}